<div class="col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 col-xs-4 col-xs-offset-4">
   
   
    <div class="descricao">
          <h2 class=" label label-info col-md-offset-2">Reenviar instruções para desbloqueio</h2>
    </div>
  
  
  <%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post,
    class: "form-horizontal"}) do |f| %>
    <%= f.error_notification %>
    <%= f.full_error :unlock_token %>
  
    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>
    </div>
  
    <div class="form-actions">
      <%= f.button :submit, "Reenviar", class: "btn btn-success" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>
