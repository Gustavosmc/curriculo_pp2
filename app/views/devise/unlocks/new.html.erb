<div class="col-md-6 col-md-offset-4 w3-margin-top w3-card-4 w3-hover-shadow w3-round-xlarge ">   

   <%= description_w3("Reenviar instruções para desbloqueio") %>
  
  <%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post,
    class: "form-horizontal"}) do |f| %>
    <%= f.error_notification %>
    <%= f.full_error :unlock_token %>
  
    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>
    </div>
  
    <div class="form-actions">
      <%= f.button :submit, "Reenviar", class: "btn btn-success" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>
