<div class="col-md-6 col-md-offset-4 w3-margin-top w3-card-4 w3-hover-shadow w3-round-xlarge ">   

  
  <%= description_w3("Esqueceu Sua Senha?") %>
  
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post,
    class: 'form-vertical'}) do |f| %>
    <%= f.error_notification %>
  
    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>
    </div>
  
    <div class="form-actions">
      <%= f.button :submit, "Enviar",class: 'btn btn-primary' %>
    </div>
  <% end %>
  <hr>
  <%= render "devise/shared/links" %>
</div>