<div class='form-inline'>
  <div class="form-group">
  <%- if controller_name != 'sessions' %>
    <%= button_to "Entrar", new_session_path(resource_name) , method: :get,
          class: 'btn btn-info'%>
  <% end -%>
  </div>
  
  <div class="form-group">
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= button_to "Registrar", new_registration_path(resource_name) , method: :get,
          class: 'btn btn-info'%>
  <% end -%>
  </div>
  
  <div class="form-group">
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= button_to "Esqueceu sua senha?", new_password_path(resource_name) , method: :get,
          class: 'btn btn-info '%>
  <% end -%>
  </div>
  
  <div class="form-group">
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= button_to "Não recebeu intruções de confirmação", new_confirmation_path(resource_name) ,
          class: 'btn btn-info'%>
  <% end -%>
  </div>
  
  <div class="form-group">
  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= button_to "Não recebeu instruções de desbloqueio?", new_unlock_path(resource_name) ,
          class: 'btn btn-info'%>
  <% end -%>
  </div>
  
  <div class="form-group">
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider),
          class: 'btn btn-info' %>
    <% end -%>
  <% end -%>
  </div>
</div>
