<div class="col-md-4 col-md-offset-4 w3-margin-top w3-card-4 w3-hover-shadow w3-round-xlarge">
    
  <%= description_w3('Entrar') %>
  
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name) ,  html: { class: 'form-vertical' }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, required: false %>
      <%= f.input :remember_me,  as: :boolean if devise_mapping.rememberable? %>
    </div>
  
    <div class="form-actions">
      <%= f.button :submit, "Entrar", class: "btn btn-success" %>
    </div>
    <hr>
  <% end %>
  
  <div class="w3-center">
    <%= render "devise/shared/links" %>
  </div>

</div>