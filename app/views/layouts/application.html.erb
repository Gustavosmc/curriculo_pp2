<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Curriculo" %></title>
    <meta name="description" content="">
    <meta name="author" content="">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=PT+Sans"/>
    
    <%= csrf_meta_tags %>
    <%= yield(:head) %> 
     
    
  </head>
  <body>
    
   <header role="banner" class="cabecalho navbar navbar-fixed-top navbar-inverse">
      <div class="container ">
        <div class="cabecalho navbar-header">
          <button data-toggle="collapse-side" data-target=".side-collapse" data-target-2=".side-collapse-container" type="button" class="navbar-toggle pull-left"><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
        </div>
        <div class="cabecalho navbar-inverse side-collapse in">
          <nav role="cabecalho navigation" class="navbar-collapse">
            <%= render "layouts/navigation" %>
          </nav>
        </div>
      </div>
    </header>
    <div class="conteudo container side-collapse-container w3-margin-top">
      <div class="row">
        <%= render "layouts/messages" %>
        <%= yield %>
      </div>
    </div>
    
    
    <% if controller.controller_name == "home" %>
      <footer class="w3-row w3-margin-top">
        
        <div class="w3-row w3-col s3 w3-margin-right w3-mobile">
          
            <div class="w3-col s12 w3-margin-bottom w3-margin-left ">
               <%= image_tag("capul_logo.png", height: '64', width: '145') %>
            </div>
        
        
            <div class="w3-col s12 w3-margin-left w3-left-align w3-xlarge w3-mobile ">
                <h4>EMPRESA-X - Empresa X Unaí Ltda</h4>
                <h5>Rua dos Bobos, nº 0</h5>
                <h5>Bairro Centro - Unaí - MG</h5>
                <h5>CEP: 38610-000</h5>
                <h5>Site: <%= link_to "empresax.com.br", "http://empresax.com.br/"%></h5>
            </div>
       </div>
       
        <div class="w3-col s7 ">
      	  <div class="row-fluid">
              <div class="span8">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3828.269409878033!2d-46.89194868556414!3d-16.360232841483437!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMTbCsDIxJzM2LjkiUyA0NsKwNTMnMjMuMSJX!5e0!3m2!1spt-BR!2sbr!4v1497535479487" width="1200" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>
              </div>
          </div>
        </div>
        
        
      </footer>
    <% end %>

    
    
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true  %>

    

  </body>
    

</html>

