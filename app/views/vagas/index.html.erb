

<div class="col-md-9">
  <p id="notice"><%= notice %></p>
   <div class="descricao">
          <h2 class=" label label-info col-md-offset-6f">Vagas Ofertadas</h2>
    </div>
 
  <% unless @vagas.empty? %>
  <table class='table table-striped table-responsive'>
    <thead>
      <tr>
        <th>Descrição</th>
        <th>Especial</th>
        <th>Setor</th>
        <th>Status</th>
        <th>Ações</th>
      </tr>
    </thead>
  
    <tbody>
      <% @vagas.each do |vaga| %>
       
        <tr>
          <td><%= vaga.descricao %></td>
          <td><%= vaga.especial %></td>
          <td><%= vaga.setor.descricao %></td>
          <td><%= vaga.status %></td>
          <td ><%= link_to 'Detalhes', vaga, class: 'btn btn-info btn-sm'%>
               <%= link_to 'Candidatar', vaga, class: 'btn btn-success btn-sm'%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% else %>
      <div class="alert alert-info" role="alert">
          <strong>Não há vagas no momento</strong>:
      </div>
  <% end %>

</div>
<div class="search col-md-2 label-default">
    <div class="lb col-md-offset-4">
       <label class="label label-success ">Filtro</label>
    </div>
    </br></br>
    <div>
      <select>
        <option value="Mercado">Mercado</option>
        <option value="Posto">Posto</option>
        <option value="Distribuição">Distribuição</option>
        <option value="Other">Outro</option>
      </select>
    </div>

</div>