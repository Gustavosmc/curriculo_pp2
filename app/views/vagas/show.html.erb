
<div class="w3-row col-md-offset-4">
    <div class="w3-col w3-half">
    <div class=" w3-card-8 w3-hover-shadow  w3-round-xlarge w3-wide">
        <div>
         
            <%= description_w3(@vaga.descricao) %>
            <p><strong>Postada em :</strong> <%= @vaga.created_at.strftime('%d/%m/%y: %H:%M') %></p>
            <p><strong>Status :</strong> <%= @vaga.status %></p>
            <p><strong>Especial :</strong> <%= @vaga.especial %></p>
            <p><strong>Setor :</strong> <%= @vaga.setor.descricao %></p>
            <p><strong>Sal√°rio :</strong> <%= number_to_currency @vaga.salario %></p>
            <p><strong>Requisitos :</strong> <%= @vaga.requisitos %></p>
        </div>
        
    
        <div class="w3-container w3-center">
          <%= button_to 'Candidatar', new_candidato_path, class: 'btn btn-success', method: :get, 
                                  form: {style: 'display:inline-block;'}, params: {vaga: @vaga.id}%>
          <%= link_to 'Voltar', :back, class: 'btn btn-danger',
              form: {style: 'display:inline-block;'} %>
        </div>
    </div>
    </div>
    
</div>



