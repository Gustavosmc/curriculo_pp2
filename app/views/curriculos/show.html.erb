
<%= render 'curriculo' %>


<div class=" w3-margin w3-center w3-card w3-row w3-mobile" >
  <div class="form-inline w3-margin">
     
      <div class="form-group">
          <%= button_to "Editar Curriculo", edit_curriculo_path(@curriculo), class:"btn btn-info ", method: :get %>
      </div>
      
      <div class="form-group">
          <%= button_to "Editar Dados Usuario", edit_usuario_registration_path(current_usuario), class:"btn btn-info ", method: :get %>
      </div>
      
      <div class="form-group">
          <%= link_to "Gerar PDF", curriculo_path(@curriculo, format: :pdf), method: :get, target: :_blank, 
              class:"btn btn-success" %>
     </div>
     
</div>  
    
